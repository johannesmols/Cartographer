<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_heatmap"
            style="@style/CardView.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_weight="0.5"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription">

            <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card_heatmap_thumbnail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/cardview_light_background"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/card_heatmap_subtitle"
                    app:layout_constraintDimensionRatio="H,16:9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:srcCompat="@drawable/flat_map_thumbnail" />

                <TextView
                    android:id="@+id/card_heatmap_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_text_margin"
                    android:layout_marginEnd="@dimen/card_text_margin"
                    android:layout_marginStart="@dimen/card_text_margin"
                    android:layout_marginTop="@dimen/card_text_margin"
                    android:lineSpacingExtra="8dp"
                    android:text="@string/card_heatmap_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_heatmap_thumbnail" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_fav_places"
            style="@style/CardView.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_weight="0.5"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription">

            <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card_second_thumbnail"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="false"
                    android:background="@color/cardview_light_background"
                    android:cropToPadding="false"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toTopOf="@+id/card_second_subtitle"
                    app:layout_constraintDimensionRatio="H,16:9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:srcCompat="@mipmap/fav_places_icon_foreground" />

                <TextView
                    android:id="@+id/card_second_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_text_margin"
                    android:layout_marginEnd="@dimen/card_text_margin"
                    android:layout_marginStart="@dimen/card_text_margin"
                    android:layout_marginTop="@dimen/card_text_margin"
                    android:lineSpacingExtra="8dp"
                    android:text="@string/card_fav_places_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_second_thumbnail" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_third"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="ContentDescription">

        <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_third_thumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/cardview_light_background"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/card_third_subtitle"
                app:layout_constraintDimensionRatio="H,16:6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/flat_map_thumbnail" />

            <TextView
                android:id="@+id/card_third_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_text_margin"
                android:layout_marginEnd="@dimen/card_text_margin"
                android:layout_marginStart="@dimen/card_text_margin"
                android:layout_marginTop="@dimen/card_text_margin"
                android:lineSpacingExtra="8dp"
                android:text="@string/card_third_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_third_thumbnail" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>